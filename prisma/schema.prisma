generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Situation {
  id Int @id @default(autoincrement())
  situation String @default("ATIVO")

  users User[]
  petshop PetShop[]

  @@map("situation")
}

model User {
  id              String @id @default(uuid())
  name            String
  email           String @unique
  phone           String
  document        String
  password        String
  created_at      DateTime @default(now())

  userType        UserType? @relation(fields: [userTypeId], references: [id])
  userTypeId      Int? @default(2)

  situationStatus Situation? @relation(fields: [situation], references: [id])
  situation       Int?

  petshop     PetShop []
  @@map("users")
}

model UserType {
  id    Int @id @default(autoincrement())
  type  String
  users User []
  @@map("userType")
}

model PetShop {
  id              String @id @default(uuid())
  name            String
  description     String
  logo            String
  phone           String?
  cnpj            String @unique
  address         String
  address_number  String
  zip_code        String
  city            String
  uf              String
  slug            String?
  user            User @relation(fields: [userId], references: [id])
  userId          String
  situationStatus Situation? @relation(fields: [situation], references: [id])
  situation       Int @default(1)

  @@map("petShop")
}
