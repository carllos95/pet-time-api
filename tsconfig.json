{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@prisma/client": [
        "node_modules/@prisma/client"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "node_modules/@prisma/client"
  ],
  "exclude": [
    "node_modules"
  ]
}